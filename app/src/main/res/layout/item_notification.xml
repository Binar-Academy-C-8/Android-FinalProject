<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/text_notifications">

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="2dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_promo"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/primary_dark_blue_06"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_date_and_time"
        app:layout_constraintStart_toEndOf="@id/iv_notification"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Promo" />

    <TextView
        android:id="@+id/tv_date_and_time"
        style="@style/TextMedium12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="end"
        android:textColor="@color/neutral_03"
        app:layout_constraintBottom_toBottomOf="@+id/tv_promo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_promo"
        tools:text="2 Maret, 12:00" />


    <TextView
        android:id="@+id/tv_notif_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="4"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_date_and_time"
        app:layout_constraintStart_toEndOf="@id/iv_notification"
        app:layout_constraintTop_toBottomOf="@id/tv_promo"
        tools:text="Dapatkan Potongan 50% selama Bulan Maret!" />

    <View
        app:layout_constraintTop_toBottomOf="@id/tv_notif_line2"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="12dp"
        android:background="@color/neutral_02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>