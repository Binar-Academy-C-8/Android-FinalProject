<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    tools:context=".presentation.detailcourse.DetailCourseActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/tv_name_category_course"
        android:layout_width="180dp"
        android:layout_height="26dp"
        app:cardBackgroundColor="@color/neutral_03"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/tv_level"
        android:layout_width="130dp"
        android:layout_height="26dp"
        app:cardBackgroundColor="@color/neutral_03"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/tv_title"
        android:layout_width="150dp"
        android:layout_marginVertical="@dimen/dimen_4_dp"
        android:layout_height="26dp"
        app:cardBackgroundColor="@color/neutral_03"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_category_course"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/tv_author"
        android:layout_width="130dp"
        android:layout_marginVertical="@dimen/dimen_4_dp"
        android:layout_height="26dp"
        app:cardBackgroundColor="@color/neutral_03"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/tv_detail"
        android:layout_width="180dp"
        android:layout_marginVertical="@dimen/dimen_4_dp"
        android:layout_height="20dp"
        app:cardBackgroundColor="@color/neutral_03"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_author"/>

</androidx.constraintlayout.widget.ConstraintLayout>